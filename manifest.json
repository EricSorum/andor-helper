{
  "manifest_version": 3,
  "name": "Andor Helper",
  "version": "1.0.0",
  "description": "A helpful extension that, when browsing shows to stream, reminds you that you could be watching Andor instead.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "https://www.netflix.com/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "images/andor-48.png",
    "128": "images/andor-128.png"
  },
  "web_accessible_resources": [{
    "resources": ["images/andor-full.png"],
    "matches": ["*://*/*"]
  }]
} 